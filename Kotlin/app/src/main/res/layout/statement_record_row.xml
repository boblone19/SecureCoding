<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:filterTouchesWhenObscured="true"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_account_details_activity_viewholder_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BE32 3232 232"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tv_account_details_activity_viewholder_message"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_account_details_activity_viewholder_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Something about payment"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_account_details_activity_viewholder_number" />

    <TextView
        android:id="@+id/tv_account_details_activity_viewholder_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- $200"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>